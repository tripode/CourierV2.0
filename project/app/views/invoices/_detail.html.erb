<table
	columnClasses="center,center,center,center,center,center,center,center,center,center"
	headerClass="center"
	rowClasses="odd gradeC" cellpadding="0" cellspacing="0"
	border="1" class="tablaIndex display"  bgcolor="white">
	<thead>
	  <tr>
	  	<th>Item</th>
	  	<th>Nro Nota de Retiro</th>
	    <th>Tipo de Producto</th>
	    <th>Cantidad</th>
	    <th>Precio Unitario</th>
	    <th>Sub Total</th>
	    <th></th>
	  </tr>
	</thead>
        <tbody id="tbody-details">
	<% $details.each do |detail| %>
	  <tr>
	  	<td><%= $details.index(detail) + 1 %></td>
	  	<td><%= detail.number%></td>
	  	<td><%= detail.product_type.description %></td>
	  	<td><%= detail.amount %></td>
	  	<td><%= detail.unit_price%></td>
	  	<td><%= (detail.unit_price *= detail.amount) %></td>
	  </tr>
	<% end %>
	</tbody>
</table>
